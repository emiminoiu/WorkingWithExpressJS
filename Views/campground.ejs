<% include partials/header %>


    <div class="container">
        <header class="jumbotron">
            <div class="contrainer">
                <h1>This is camps page!</h1>
                <a href="/campground/new"><button type="button" class="btn btn-primary btn-lg">Create new Camp</button></a>
            </div>
        </header>
        <br>

        <br>
        <div class="row text-center">
            <% campgrounds.forEach(function(camp){ %>
                <div class="col-md-6 col-sm-12">


                    <div class="thumbnail">
                        <img src="<%= camp.image %>" width="500px" height="300px">
                        <div class="caption">
                            <%= camp.name %>

                        </div>
                        <%= camp.description %>
                    </div>

                </div>
                <% }) %>
        </div>
    </div>
    <style>
        .jumbotron {
            text-align: center;
        }
        
        .elements {
            text-align: center;
        }
    </style>